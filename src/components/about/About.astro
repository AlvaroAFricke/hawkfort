---
import AboutItem from "./AboutItem.astro";
import Data from "../../DATA/data-es.json";
---

<br id="About" /><br />
<section class="relative w-full h-1/3 flex flex-col justify-center">
  <div class="text-center">
    <h2
      class="md:text-6xl text-5xl font-bold mb-4 pb-4
      bg-gradient-to-r from-cyan-500 via-cyan-300 to-cyan-500 text-transparent bg-clip-text"
    >
      {Data.About.titulo}
    </h2>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 my-12">
    <div
      class="text-center text-balance md:text-4xl text-2xl text-orange-100 mb-4 pb-4 px-4 flex justify-center items-center"
    >
      <p>
        {Data.AboutUno.descripcionUno}
        <span class="font-bold text-orange-300">{Data.AboutUno.resaltado}</span>
        {Data.AboutUno.descripcionDos}
      </p>
    </div>

    <div class="relative">
      <ul
        class="top-0 left-0 w-full h-full bg-orange-300 text-white text-center lg:rounded-l-2xl flex flex-row space-x-4 justify-center"
      >
      {
        Data.AboutCardsUno.map((elemento) => (
          <AboutItem
            titulo={elemento.titulo}
            texto={elemento.texto}
            tiempo={elemento.tiempo}
            icono={elemento.icono}
          />
        ))
      }
      </ul>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 mb-6">
    <div class="relative order-2 lg:order-1">
      <ul
        class="top-0 left-0 w-full h-full bg-orange-300 text-white text-center lg:rounded-r-2xl flex flex-row space-x-4 justify-center"
      >
      {
        Data.AboutCardsDos.map((elemento) => (
          <AboutItem
            titulo={elemento.titulo}
            texto={elemento.texto}
            tiempo={elemento.tiempo}
            icono={elemento.icono}
          />
        ))
      }
      </ul>
    </div>
    <div
      class="text-center text-balance md:text-4xl text-2xl text-orange-100 mb-4 pb-4 px-4 flex justify-center items-center order-1 lg:order-2"
    >
      <p>
        {Data.AboutDos.descripcionUno}
        <span class="font-bold text-orange-300">{Data.AboutDos.resaltado}</span>
        {Data.AboutDos.descripcionDos}
      </p>
    </div>

    
  </div>
    
  </div>
</section>
